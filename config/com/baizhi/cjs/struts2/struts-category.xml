<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="category" extends="struts-default" namespace="/category">
		<!-- 显示类别 -->
		<action name="categoryList" class="com.baizhi.cjs.action.CategoryAction" method="categoryList">
			<result name="success" type="dispatcher">/main/category.jsp</result>
		</action>
		<!-- 显示类别和图书 -->
		<action name="categoryBook" class="com.baizhi.cjs.action.CategoryAction" method="categoryBook">
			<result name="success" type="dispatcher">/main/book_list.jsp</result>
		</action>
	</package>
	
</struts>
